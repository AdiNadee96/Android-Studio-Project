<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="50dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    tools:context=".MainActivity">

    <!--Edit text to enter course name-->
    <EditText
        android:id="@+id/idProductName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Enter Product Name" />

    <!--edit text to enter course duration-->
    <EditText
        android:id="@+id/idCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Enter Product Category" />

    <!--edit text to display course tracks-->
    <EditText
        android:id="@+id/idIngredients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Enter Ingredients" />

    <!--edit text for course description-->
    <EditText
        android:id="@+id/idProductDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Enter Description" />

    <!--button for adding new course-->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/idBtnAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:text="Add Product"
        android:textColor="@color/white"
        android:background="@drawable/custom_register_button"
        android:textAllCaps="false" />

    <!--new button for opening our course list activity-->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/idBtnViewProducts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="30dp"
        android:text="View All Products"
        android:textColor="@color/white"
        android:background="@drawable/custom_register_button"
        android:textAllCaps="false" />

</LinearLayout>


